{
	"compilerOptions": {
		"target": "ES2024",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ES2024"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		/* Path aliases */
		"paths": {
			"^actions/*": ["./front/src/actions/*"],
			"^consts/*": ["./front/src/consts/*"],
			"^components/*": ["./front/src/components/*"],
			"^events/*": ["./front/src/events/*"],
			"^tauri-apps/*": ["./front/src/lib/tauri/@tauri-apps/*"],
			"^tauri/*": ["./front/src/lib/tauri/*"],
			"^types/*": ["./front/src/types/*"],
			"^lib/*": ["./front/src/lib/*"],
			"^state/*": ["./front/src/state/*"],
			"^storage/*": ["./front/src/storage/*"],
			"^styles/*": ["./front/src/styles/*"],
			"^src/*": ["./front/src/*"],
		}
	},
	"include": ["./front/src/**/*.ts", "./front/src/**/*.d.ts"],
}
