{
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "ES2022",
		"lib": [
			"ES2022",
			"ES2023",
			"ES2024",
			"DOM",
			"DOM.Iterable"
		],
		"skipLibCheck": false,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"baseUrl": ".",
		"paths": {
			"^actions/*": ["src/actions/*"],
			"^components/*": ["src/components/*"],
			"^events/*": ["src/events/*"],
			"^types/*": ["src/types/*"],
			"^utils/*": ["src/utils/*"],
			"^storage/*": ["src/storage/*"],
			"^styles/*": ["src/styles/*"],
			"^src/*": ["src/*"]
		},
	},
	"include": [
		"node_modules/@suns-echoes/ts-types",
		"src"
	],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node",
		"preferTsExts": true,
		"logError": true,
		"transpileOnly": true
	}
}
