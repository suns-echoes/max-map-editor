html, body {
	margin: 0;
	padding: 0;
}

body {
	font-size: 18px;
	font-family: "MAX Square", Arial, Helvetica, sans-serif;
	text-rendering: optimizeSpeed;

	background: black;

	* {
		color: inherit;
		font-family: inherit;
		font-size: 1em;
	}
}

.debug-info {
	position: absolute;
	top: 0;
	left: 0;
	margin: 0;
	padding: 0;
	color: lime;
	font-family: monospace, 'Courier New', Courier;
	font-size: 12px;
	line-height: 1em;
	background: black;
}
